{
  "name": "pxe-api",
  "version": "1.0.0",
  "private": true,
  "description": "HTTP server for automated machine setup",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "format": "prettier --write ./",
    "lint": "npm run lint:eslint && npm run lint:format && npm run lint:circular",
    "lint:circular": "dpdm -T --exit-code circular:1 --no-warning --no-tree src/index.ts",
    "lint:eslint": "eslint --max-warnings 0 --flag unstable_native_nodejs_ts_config",
    "lint:format": "prettier --check .",
    "start": "node src/index.ts",
    "start:dev": "node --inspect=0.0.0.0 --watch src/index.ts",
    "test": "tsc"
  },
  "dependencies": {
    "effect": "^3.14.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@tsconfig/node-lts": "22.0.1",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "22.14.1",
    "dpdm": "3.14.0",
    "eslint": "^9.24.0",
    "prettier": "3.5.3",
    "prettier-plugin-packagejson": "2.5.10",
    "prettier-plugin-sh": "0.17.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  },
  "engines": {
    "node": ">=23.6.0"
  }
}
